package homework12.number02;

public class Alba {
	private double workhour;
	private int timeBySalary;
	
	public double getWorkhour() {
		return workhour;
	}

	public void setWorkhour(double workhour) {
		this.workhour = workhour;
	}

	public int getTimeBySalary() {
		return timeBySalary;
	}

	public void setTimeBySalary(int timeBySalary) {
		this.timeBySalary = timeBySalary;
	}

	public void doWork() {
		System.out.println(workhour + "시간동안 일해서 " + workhour * timeBySalary + "의 급여를 받는다.");
	}
}
