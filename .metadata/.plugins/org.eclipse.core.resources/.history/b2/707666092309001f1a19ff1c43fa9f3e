package homework05.middle;

public class StringIndexChangeNum {
	
	public String strIdxChangeNum(String inputStr) {
		for(int i = 0; i < inputStr.length(); i++) {
			if(i % 3 == 0) {
				inputStr.replace(inputStr.charAt(i), '3');
				System.out.println(inputStr.charAt(i));
			} else if(i % 5 == 0) {
				inputStr.replace(inputStr.charAt(i), '5');
				System.out.println(inputStr);
			}
		}
		return inputStr;
	}
}
