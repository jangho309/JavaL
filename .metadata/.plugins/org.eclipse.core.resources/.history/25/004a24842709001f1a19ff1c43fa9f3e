package homework05.advance;

public class MathStudent extends CommonStat implements Student{

	CommonStat mathStudent;
	
	@Override
	public void saveInfo() {
		// TODO Auto-generated method stub
		mathStudent = new CommonStat("홍길동", new String[] {"미적분", "기하와벡터"}, new int[] {90, 60});
	}

	@Override
	public void printInfo() {
		// TODO Auto-generated method stub
		System.out.println("이름 : " + mathStudent.name);
		for(int i = 0; i < mathStudent.subject.length; i++) {
			System.out.println((i + 1) + "번째 수강과목 : " + mathStudent.subject[i]);
		}
		
		for(int j = 0; j < mathStudent.finalExamScore.length; j++) {
			System.out.println((j + 1) + "번째 수강점수 : " + mathStudent.finalExamScore[j]);
		}
	}

	@Override
	public double getAvg() {
		// TODO Auto-generated method stub
		int sum = 0;
		for(int j = 0; j < mathStudent.finalExamScore.length; j++) {
			sum += mathStudent.finalExamScore[j];
		}
		return sum / mathStudent.finalExamScore.length;
	}
	

}
